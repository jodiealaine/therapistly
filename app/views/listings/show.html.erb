<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
 	 		<%= image_tag @listing.image.url(:medium) %>
 	 	</div>
 	</div>
	<div class="col-md-6">
  	<%= @listing.name %>
  	<%= number_to_currency(@listing.price) %>
