<div class="jumbotron">
  <h1 class="center">Discover therapists <br>around the world.</h1>
  <h2 class="center">Find your moment of bliss, wherever you are.</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <% if listing.image.exists? %>
            <%= image_tag listing.image.url %>
          <% end %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <%= link_to 'Show', listing, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
